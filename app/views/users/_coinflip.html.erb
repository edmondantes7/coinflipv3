<div id="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 text-center">center</div>
  </div>
      <h2>Flip a coin:</h2>
      <p id="hidden_maximum_winning_price" hidden> <%= Constants::MAXIMUM_WINNING_PRICE %> </p>
      <%= form_for([@user, @user.coinflips.build]) do |f| %>
        <p>
        Total : <label id="total_balance">$<%= @user.balance %> </label> <br>    
        </p>
        <p>
        <%= f.radio_button :winning_flip, true %> 
        <%= label :winning_flip_true, 'Head' %>
        <%= f.radio_button :winning_flip, false %>
        <%= label :winning_flip_false, 'Tail' %>
        </p>
        <p>
        <%= f.label :bet, :id => "bet_label" %><br>$<%= f.text_field :bet, :id => "bet_text_field",:autocomplete => :off%>
        </p>
        <p>
        Counter : <label id="counter"> <%= @user.coinflips.count %> </label> <br>
        </p>
        <p>
          Coin Result : <label id="display"> <%= @user.last_coin_flip_result %> </label> <br>
        </p>
        <p>
          <% if @user.coinflips.count > 0 %>
            <%= f.submit "Flip", :id => "coinflip_submit_delay", :disabled => true %>
          <% else %>
            <%= f.submit "Flip", :id => "coinflip_submit" %>
          <% end %>
        </p>
      <% end %>
      <table class="table table-hover">
        <tr>
          <th>Result</th>
          <th>Bet Amount</th>
          <th>Ending Balance</th>
        </tr>
        <%= @user.coinflips.count %>
        <% @user.coinflips.each do |coinflip| %>
        <% if coinflip.persisted? then %>
          <tr>
            <td> <%= coinflip.convert(coinflip.coin_result) %> </td>
            <td> <%= coinflip.convert(coinflip.bet) %> </td>
            <td> <%= coinflip.convert(coinflip.balance) %> </td>
          </tr>
        <% end %>
        <% end %>
        </table>
</div>
