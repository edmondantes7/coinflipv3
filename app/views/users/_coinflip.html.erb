<div id="welcome-container">
  <img id="mountains" src="http://www.elmfunds.com/img/bg4.jpg" />
  <p id="balance">Balance : <label id="total_balance">$<%= @user.balance %> </label></p>
    <p id="counter">Counter : <label id="counter"> <%= @user.coinflips.count %> </label></p>
      <div id="coinflip-container">
      <h2>Flip a coin:</h2>
        <% if @user.coinflips.count > 0 %>
          <div id="animation"><img src="http://www.animateit.net/data/media/90/47arw.gif" /></div>
    <% else %>
            <div id="animation"><img src="http://www.animateit.net/data/media/90/47arw.gif" hidden/></div>
        <% end %>

      <%= form_for([@user, @user.coinflips.build]) do |f| %>
        
        <p>
        <%= f.radio_button :winning_flip, true %> 
        <%= label :winning_flip_true, 'Head' %>
        <%= f.radio_button :winning_flip, false %>
        <%= label :winning_flip_false, 'Tail' %>
        </p>
        <p>
        <%= f.label :bet, :id => "bet_label" %><br>$<%= f.text_field :bet, :id => "bet_text_field",:autocomplete => :off%>
        </p>
        
        <p>
          Coin Result : <label id="display"> <%= @user.last_coin_flip_result %> </label> <br>
        </p>
        <p>
          <% if @user.coinflips.count > 0 %>
            <%= f.submit "Flip", :id => "coinflip_submit_delay", :disabled => true %>
          <% else %>
            <%= f.submit "Flip", :id => "coinflip_submit" %>
          <% end %>
        </p>
      <% end %>

      <table class="table table-hover">
        <tr>
          <th>Result</th>
          <th>Bet Amount</th>
          <th>Ending Balance</th>
        </tr>
        <%= @user.coinflips.count %>
        <% @user.coinflips.each do |coinflip| %>
        <% if coinflip.persisted? then %>
          <tr>
           
            <td> <%= coinflip.convert(coinflip.coin_result) %> </td>
            <td> <%= coinflip.bet %> </td>
            <td> <%= coinflip.balance %> </td>
          </tr>
        <% end %>
        <% end %>
        </table>
        </div>
</div>
